<main class="contenedor">
    <form action="/profile/edit" method="POST" class="default-form">
        <div class="campo">
            <label for="name">Name</label>
            <input value="{{user.name}}" type="text" name="name" placeholder="Your name"  required>
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Your email" value={{user.email}}  required>
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Your password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save">
        </div>
    </form>
</main>