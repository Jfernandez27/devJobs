<main class="contenedor">
    <form action="/jobs/new" method="POST" class="default-form">
        <h3>General Information</h3>
        <div class="campo">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Ex: React Developer" required >
        </div>
        <div class="campo">
            <label for="company">Company</label>
            <input type="text" name="company" id="company" placeholder="Ex: Facebook" required >
        </div>
        <div class="campo">
            <label for="location">Location</label>
            <input type="text" name="location" id="location" placeholder="Ex: England / Remote" required >
        </div>
        <div class="campo">
            <label for="salary">Salary</label>
            <input type="text" name="salary" id="salary" placeholder="Ex: 1000 USD" required >
        </div>
        <div class="campo">
            <label for="contract">Contract</label>
            <select name="contract" id="contract">
                    <option value="" disabled selected>-- Choose --</option>
                    <option value="freelance">Freelance</option>
                    <option value="full">Full Time</option>
                    <option value="part">Part Time</option>
                    <option value="project">By project</option>
            </select>
        </div>
        <h3>Job Description</h3>
        <div class="campo descripcion">
            <label for="description">Description</label>
            <input id="x" type="hidden" name="description">
            <trix-editor input="x" class="trix-content"></trix-editor>
        </div>
        <h3>Skills</h3>
        <ul class="lista-conocimientos">
            {{#selectSkills a}}
            {{/selectSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publish" class="btn btn-azul">
        </div>
    </form>
</main>